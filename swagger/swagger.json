{
  "swagger": "2.0",
  "info": {
    "title": "API",
    "version": "v1"
  },
  "paths": {
    "/session": {
      "post": {
        "summary": "Sign in user",
        "consumes": [
          "application/json"
        ],
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "credentials",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password"
              ],
              "example": {
                "email": "john@brown",
                "password": "123456"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user successfully signed in",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/user"
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "summary": "User",
        "consumes": [
          "application/json"
        ],
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "payload",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "required": [
                  "email",
                  "password",
                  "first_name",
                  "last_name"
                ],
                "example": {
                  "email": "doria.bogisich@grimes.name",
                  "first_name": "Beata",
                  "last_name": "Armstrong",
                  "password": "xQCvOMmH5_"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "user created",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/user"
            }
          }
        }
      }
    },
    "/users/{id}": {
      "put": {
        "summary": "User",
        "consumes": [
          "application/json"
        ],
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "payload",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                }
              },
              "example": {
                "first_name": "Lashon",
                "last_name": "Halvorson"
              }
            }
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "user updated",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/user"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "user": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "avatar": {
          "$ref": "#/definitions/avatar"
        }
      },
      "required": [
        "email",
        "first_name",
        "last_name",
        "avatar"
      ]
    },
    "avatar": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "x-nullable": true
        }
      },
      "required": [
        "url"
      ]
    }
  }
}